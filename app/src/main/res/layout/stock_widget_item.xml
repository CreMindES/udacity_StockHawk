<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stock_widget_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_list_item_height"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/stock_widget_change_icon"
        android:layout_width="@dimen/widget_list_item_icon_width"
        android:layout_height="match_parent"
        android:background="@color/material_red_700"/>

    <TextView
        android:id="@+id/stock_widget_item_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="@dimen/activity_stock_item_padding"
        tools:text="NOK" />

    <TextView
        android:id="@+id/stock_widget_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:padding="@dimen/activity_stock_item_padding"
        tools:text="1.34" />

    <TextView
        android:id="@+id/stock_widget_item_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:padding="@dimen/activity_stock_item_padding"
        tools:text="+5.1%" />

</FrameLayout>